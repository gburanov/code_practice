<%= simple_form_for @customer do |f| %>

    <%= f.input :first_name %>
    <%= f.input :last_name %>
    <%= f.input :street %>
    <%= f.input :postcode %>
    <%= f.input :city %>
    <%= f.input :email %>

    <%= f.input :birthday, :start_year => 1950, :end_year => 2000 %>

    <%= f.submit %>

<% end %>
<h1>Listing bookmarks</h1>

<table>
  <tr>
    <th>Url</th>
    <th>Text</th>
  </tr>

  <% @bookmarks.each do |bookmark| %>
    <tr>
      <td><%= bookmark.title %></td>
      <td><%= bookmark.text %></td>
      <td><%= link_to 'Show', bookmark_path(article) %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'New bookmark', new_bookmark_path %>
